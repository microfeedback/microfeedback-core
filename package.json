{
  "name": "microfeedback-core",
  "description": "The core library for creating microfeedback backends.",
  "author": {
    "name": "Steven Loria",
    "email": "sloria1@gmail.com",
    "url": "stevenloria.com"
  },
  "repository": "microfeedback/microfeedback-core",
  "version": "3.0.0",
  "main": "index.js",
  "license": "MIT",
  "files": [
    "index.js",
    "example.js"
  ],
  "engines": {
    "node": ">=8"
  },
  "keywords": [
    "micro",
    "microfeedback",
    "microservice",
    "feedback"
  ],
  "scripts": {
    "start": "micro example.js",
    "dev": "micro-dev example.js",
    "test": "npm run lint && NODE_ENV=test PERSPECTIVE_ENABLED=false ava",
    "test:debug": "NODE_ENV=test iron-node ./node_modules/ava/profile.js test.js",
    "lint": "xo",
    "release": "np"
  },
  "dependencies": {
    "akismet-api": "^4.0.1",
    "micro-cors": "^0.1.0",
    "perspective-api-client": "^3.0.0"
  },
  "devDependencies": {
    "ava": "^3.8.1",
    "micro": "^9.0.0",
    "micro-dev": "^3.0.0",
    "np": "^3.0.0",
    "request-promise": "^4.2.0",
    "test-listen": "^1.0.2",
    "xo": "^0.23.0"
  },
  "peerDependencies": {
    "micro": "^9.0.0"
  },
  "xo": {
    "envs": [
      "node"
    ],
    "space": true,
    "rules": {
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "never"
        }
      ]
    }
  }
}
